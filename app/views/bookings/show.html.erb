
<div id="carouselExampleIndicators" class="carousel slide">
  <div class="carousel-inner">
  <% @booking.listing.photos.each do |photo| %>
    <% if photo == @booking.listing.photos.first %>
      <div class="carousel-item active">
        <%= cl_image_tag(photo.key, class: "show-image d-block w-100") %>
      </div>
    <% else %>
      <div class="carousel-item">
        <%= cl_image_tag(photo.key, class: "show-image d-block w-100") %>
      </div>
    <% end %>
  <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
  <div class="show-banner">
    <h1><%= @booking.listing.title %></h1>
    <p><%= @booking.listing.boat_description %></p>
    <p style="color: #66ff00;"><i class="fa-solid fa-check"></i> Booked</p>
  </div>


<div class="d-flex p-3 justify-content-center">
  <div class="d-flex flex-column justify-around">
    <div>
      <div class="card m-3 p-2">
      <h2 class=""> Yacht details:</h2>
      <div>
        <% @booking.listing.average_rating.to_i.times do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
        <% (10 - @booking.listing.average_rating.to_i).times do %>
          <i class="fa-regular fa-star"></i>
        <% end %>
      </div>
      <div>
        <span class="card-text"><i class="fa-solid fa-location-dot"></i></span><span class="card-text"> <%= @booking.listing.address %></span>
      </div>
      <div>
        <span class="card-text"><i class="fa-solid fa-person"></i></span><span class="card-text"> <%= @booking.listing.capacity %></span>
      </div>
      <div>
      <span class="card-text"><i class="fa-solid fa-sterling-sign"></i></span><span class="card-text"> <%= @booking.listing.price %> per night</span>
    </div>
    <div>
    <div>
        <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Request Invoice</button>
    </div>

  </div>

    </div>
     <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
       <div class="modal-content">
        <div class="modal-header">
         <h1 class="modal-title fs-5" id="exampleModalLabel">Request Invoice</h1>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-address" class="col-form-label">Address:</label>
            <input type="text" class="form-control" id="recipient-address">
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Send message</button>
      </div>
    </div>
  </div>
</div>

  </div>
  <div class="card m-3 p-2">
    <h2>Booking details:</h2>
    <h4>start of stay:</h4>
    <p><%= @booking.start_date %></p>
     <h4>End of stay:</h4>
    <p><%= @booking.end_date %></p>
    </button>
      <%= link_to "cancel this booking", booking_path(@booking), class: "btn btn-cancel rounded btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to cancel this booking?" } %>
      <%= link_to "Write a review ", new_booking_review_path(@booking), class: "btn btn-primary" %>
    </div>
  </div>
</div>
